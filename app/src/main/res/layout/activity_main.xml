<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity">

    <!-- Status Bar: Displays Question Number, Score, and Remaining Questions -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/light_gray"
        android:elevation="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question: 1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/questionsLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining: 10"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- ProgressBar for question progress tracking -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:progress="0"
        android:max="10"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="@color/primary"/>

    <!-- TextView to display the question -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_background"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Question will appear here" />

    <!-- RadioGroup containing answer options -->
    <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/options_background">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary"
            android:padding="12dp"
            android:text="Option 1"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary"
            android:padding="12dp"
            android:text="Option 2"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary"
            android:padding="12dp"
            android:text="Option 3"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary"
            android:padding="12dp"
            android:text="Option 4"
            android:textSize="16sp"/>
    </RadioGroup>

    <!-- Button to go to the next question -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:elevation="2dp"
        android:paddingVertical="12dp"/>

</LinearLayout>
